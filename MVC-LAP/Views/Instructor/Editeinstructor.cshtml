@model Instructor
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <!-- left column -->
            <div class="col-md-6">
                <!-- general form elements -->
                <div class="card card-primary">
                    <div class="card-header">
                        <h3 class="card-title"> Edit </h3>
                    </div>
                    <!-- /.card-header -->
                    <!-- form start -->

                    <form method="post" action="/Instructor/SaveEdit?Ins_Id=@Model.Ins_Id">
                        
                        <div class="text-danger"></div>
                        <div class="card-body">
                            <div class="form-group" style="margin-bottom:10px;">
                                <label for="exampleInputEmail1"> Instructore Name</label>
                                <input type="text"
                                       class="form-control"
                                       value="@Model.Ins_Name"
                                       required="required"
                                       name="Ins_Name"
                                       placeholder=" Enter Product Name">
                            </div>
                            <div class="form-group" style="margin-bottom:10px;">
                                <label for="exampleInputEmail1">Departmant Name</label>
                                <select name="Dept_Id" type="text"
                                @foreach (Department item in ViewBag.dept)
                                {
                                    if (Model.Dept_Id == item.Dept_Id)
                                    {
                                                <option value="@item.Dept_Id" selected>@item.Dept_Name</option>
                                    }

                                    {
                                                 <option value="@item.Dept_Id" >@item.Dept_Name</option>

                                    }

                                }
                            </select>
                            </div>
                            <div class="form-group " style="margin-left: 241px; margin-top: -34px;">
                                <label for="exampleInputEmail1">Course Name</label>
                                <select name="Crs_Id" type="text"
                                @foreach (Course item in ViewBag.course)
                                {
                                    if (Model.Crs_Id == item.Crs_Id)
                                    {
                                                        <option value="@item.Crs_Id" selected>@item.Crs_Name</option>
                                    }

                                    {
                                                         <option value="@item.Crs_Id" >@item.Crs_Name</option>

                                    }
                                }
                            </select>
                            </div>
                            <div class="form-group" style="    margin-top: 21px;">
                                <label for="exampleInputEmail1"> Ins_Address</label>
                                <input type="text"
                                       name="Ins_Address"
                                       value="@Model.Ins_Address"
                                       class="form-control"
                                       placeholder=" Enter Descreption">
                            </div>
                            <div class="form-group">
                                <label> Sallery</label>
                                <input type="text"
                                       name="Salary"
                                       value="@Model.Salary"
                                       class="form-control"
                                       placeholder=" Enter Price ">
                            </div>

                            <div class="form-group">
                                <label> Instructor Photo</label>
                                <input type="text"
                                       name="Ins_Image"
                                       value="@Model.Ins_Image"
                                       class="form-control"
                                       placeholder=" Instructor Photo  ">
                            </div>



                        </div>
                        <!-- /.card-body -->

                        <div class="card-footer">
                            <button type="submit" value="save" class="btn btn-primary">Edit</button>
                        </div>
                    </form>
                </div>
                <!-- /.card -->
                <!-- general form elements -->


            </div>
            <!--/.col (left) -->

        </div>
        <!-- /.row -->
    </div><!-- /.container-fluid -->
</section>