<section class="content">
    <div class="container-fluid">
        <div class="row">
            <!-- left column -->
            <div class="col-md-6">
                <!-- general form elements -->
                <div class="card card-primary">
                    <div class="card-header">
                        <h3 class="card-title"> Add New Instructore</h3>
                    </div>
                    <!-- /.card-header -->
                    <!-- form start -->
                    <form action="/Instructor/CreateNewUser" method="post">
                        <div class="text-danger"></div>
                        <div class="card-body">
                            <div class="form-group" style="margin-bottom:10px;">
                                <label for="exampleInputEmail1"> Instructore Name</label>
                                <input type="text"
                                       class="form-control"
                                       required="required"
                                       name="Ins_Name"
                                       placeholder=" Enter Product Name">
                            </div>
                            <div class="form-group" style="margin-bottom:10px;">
                                <label for="exampleInputEmail1">Departmant Name</label>
                                <select name="Dept_Id" type="text"
                                @foreach (Department item in ViewBag.deptname)
                                    {
                                        <option value="@item.Dept_Id">@item.Dept_Name</option>
                                    }
                                </select>
                            </div>
                            <div class="form-group " style="margin-left: 241px; margin-top: -34px;">
                                <label for="exampleInputEmail1">Course Name</label>
                                <select name="Crs_Id" type="text"
                                @foreach (Course item in ViewBag.Cour)
                                {
                                                <option value="@item.Crs_Id">@item.Crs_Name</option>
                                }
                                </select>
                            </div>
                            <div class="form-group" style="    margin-top: 21px;">
                                <label for="exampleInputEmail1"> Ins_Address</label>
                                <input type="text"
                                       name="Ins_Address"
                                       class="form-control"
                                       placeholder=" Enter Descreption">
                            </div>
                            <div class="form-group">
                                <label> Sallery</label>
                                <input type="text"
                                       name="Salary"
                                       class="form-control"
                                       placeholder=" Enter Price ">
                            </div>

                            <div class="form-group">
                                <label> Instructor Photo</label>
                                <input type="text"
                                       name="Ins_Image"
                                       class="form-control"
                                       placeholder=" Instructor Photo  ">
                            </div>



                        </div>
                        <!-- /.card-body -->

                        <div class="card-footer">
                            <button type="submit" class="btn btn-primary">Submit</button>
                        </div>
                    </form>
                </div>
                <!-- /.card -->
                <!-- general form elements -->


            </div>
            <!--/.col (left) -->

        </div>
        <!-- /.row -->
    </div><!-- /.container-fluid -->
</section>